<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_Lotacao"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:entries="@array/lotation_array"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Combustivel" />

    <EditText
        android:id="@+id/editText_Marca"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/background_light"
        android:elevation="1dp"
        android:ems="10"
        android:hint="MARCA VIATURA"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Modelo"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/background_light"
        android:elevation="1dp"
        android:ems="10"
        android:hint="MODELO VIATURA"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Marca" />

    <Spinner
        android:id="@+id/spinner_Combustivel"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/background_light"
        android:elevation="1dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:prompt="@string/combustivel"
        android:singleLine="false"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Matricula" />

    <EditText
        android:id="@+id/editText_Matricula"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/background_light"
        android:elevation="1dp"
        android:ems="10"
        android:hint="MATRICULA"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Modelo" />

    <Switch
        android:id="@+id/switch_Seguro"
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        android:elevation="1dp"
        android:text="Seguro Contra todos os riscos?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_ViaturaPropria"
        tools:checked="false" />

    <Switch
        android:id="@+id/switch_ViaturaPropria"
        android:layout_width="320dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        android:elevation="1dp"
        android:text="Viatura PrÃ³pria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Lotacao"
        tools:checked="false" />

    <Button
        android:id="@+id/btnCriar"
        style="@style/Widget.AppCompat.Button.Colored"

        android:layout_width="153dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/colorPrimaryDark"
        android:elevation="24dp"
        android:text="CRIAR"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_Seguro"
        app:layout_constraintVertical_bias="0.627" />

    <Button
        android:id="@+id/btnCancelar"
        style="@style/Widget.AppCompat.Button.Colored"

        android:layout_width="153dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/colorPrimaryDark"
        android:elevation="24dp"
        android:text="CANCELAR"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCriar"
        app:layout_constraintTop_toBottomOf="@+id/switch_Seguro"
        app:layout_constraintVertical_bias="0.627" />
</android.support.constraint.ConstraintLayout>